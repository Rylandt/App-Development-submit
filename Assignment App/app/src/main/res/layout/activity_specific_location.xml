<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblLocationTitle"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="28sp"
        android:layout_marginTop="20dp"
            ></TextView>

    <TextView
        android:id="@+id/lblCountryName"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblLocationTitle"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_marginTop="5dp"
        ></TextView>

    <ImageView
        android:id="@+id/lblCountryFlag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblCountryName"
        android:gravity="center"
        android:layout_marginTop="5dp"
        ></ImageView>

    <ImageView
        android:id="@+id/lblCountryLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblCountryFlag"
        android:gravity="center"
        android:layout_marginTop="5dp"/>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lblCountryLocation"
        android:background="#e9e9e9"
        android:columnWidth="100dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        ></GridView>

</RelativeLayout>

